.checkbox
	margin-bottom 20px
	display flex
	cursor pointer

	&:last-child
		margin-bottom 0

	&__input
		display none

	&__check
		position relative
		sprite $checkbox_default
		flex-shrink 0

		&::after
			position absolute
			left 4px
			bottom -1px
			display none
			width 100%
			height 100%
			content '\2714'
			color: $blur

	&__label
		padding-left 6px
		font-family $font-pt-bold
		font-size 21px
		line-height 18px

	&__input:checked ~ &__check::after
		display block

	&:hover &__check
		border-color #111
	&:active &__check
		border-color #111