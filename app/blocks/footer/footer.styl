.footer
	display block

.date

	&--theme-cssr
		margin-top 64px

	&__title
		position relative
		top 14px
		display inline-block
		margin-right 3px
		font-family $font-pt-bold
		font-size 22px
		color $darker
		background transparent

	&__info
		position relative
		display inline-block
		padding-left 11px
		padding-right 15px
		padding-bottom 10px
		border none
		font-family $font-courier-regular
		font-size 30px
		line-height 30px
		background-color transparent
		&:after
			content ''
			position absolute
			display block
			width 100%
			height 9px
			bottom 0
			left 0
			background: url(../images/border-line.png) bottom left no-repeat

