.input-text

	&--theme-csssr
		margin-top 52px
		margin-bottom 70px

	&__item
		text-align left
		margin-bottom 19px
		overflow hidden

	&__title
		position relative
		top 14px
		display inline-block
		margin-right 16px
		font-family $font-pt-bold
		font-size 22px
		color $darker
		background transparent

	&__info
		position relative
		display inline-block
		padding-left 11px
		padding-bottom 13px
		border none
		font-family $font-courier-regular
		font-size 30px
		line-height 30px
		background-color transparent
		&:after
			content ''
			position absolute
			display block
			width 770px
			height 9px
			bottom 0
			left 0
			background url('../images/border-line.png') bottom left no-repeat


